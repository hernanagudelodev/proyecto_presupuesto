{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "backend",
      "rootDir": "./backend",
      "healthcheckPath": "/",
      "startCommand": "alembic upgrade head && uvicorn app.main:app --host 0.0.0.0 --port $PORT"
    },
    {
      "name": "frontend",
      "rootDir": "./frontend",
      "build": {
        "builder": "NIXPACKS"
      },
      "startCommand": "vite --host 0.0.0.0 --port $PORT"
    }
  ]
}